<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.awdevelopment.smithlab.gui.controllers.GenerateOutputSheetsController">
   <HBox alignment="CENTER" minHeight="40.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0">
      <TabPane centerShape="false" prefHeight="40.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
         <Tab text="Generate Output Sheet">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="302.0" prefWidth="600.0">
               <HBox layoutX="1.0" layoutY="-1.0" prefHeight="374.0" prefWidth="600.0">
                  <VBox prefHeight="374.0" prefWidth="601.0">
                     <HBox alignment="CENTER_LEFT" prefHeight="62.0" prefWidth="600.0" spacing="5.0">
                        <padding>
                           <Insets left="10.0"/>
                        </padding>
                        <Label text="Input File:" textAlignment="CENTER"/>
                        <TextField fx:id="inputFileTextField" onKeyTyped="#updateInputFile"
                                   prefHeight="26.0" prefWidth="451.0"
                                   promptText="Path to input file (.xlsx)"/>
                        <Button fx:id="inputFileBrowseButton" mnemonicParsing="false"
                                onAction="#browseForInputFile" prefHeight="26.0" prefWidth="70.0"
                                text="Browse..."/>
                     </HBox>
                     <HBox alignment="CENTER_LEFT" prefHeight="54.0" prefWidth="600.0" spacing="5.0">
                        <padding>
                           <Insets left="10.0"/>
                        </padding>
                        <Label text="Output Style:"/>
                        <HBox alignment="CENTER_LEFT" prefHeight="74.0" prefWidth="514.0"
                              spacing="30.0">
                           <padding>
                              <Insets left="30.0"/>
                           </padding>
                           <RadioButton fx:id="outputStylePrismRadioButton"
                                        mnemonicParsing="false"
                                        onAction="#handleRadioButtonPress" selected="true"
                                        text="Prism"/>
                           <RadioButton fx:id="outputStyleTestsRadioButton"
                                        mnemonicParsing="false"
                                        onAction="#handleRadioButtonPress"
                                        text="Statistical Tests"/>
                           <RadioButton fx:id="outputStyleRawRadioButton"
                                        mnemonicParsing="false"
                                        onAction="#handleRadioButtonPress" text="Raw"/>
                           <RadioButton fx:id="outputStyleBothRadioButton"
                                        mnemonicParsing="false"
                                        onAction="#handleRadioButtonPress"
                                        text="Prism + Statistical Tests"/>
                        </HBox>
                     </HBox>
                     <HBox alignment="CENTER_LEFT" prefHeight="56.0" prefWidth="600.0" spacing="5.0">
                        <padding>
                           <Insets left="10.0"/>
                        </padding>
                        <Label prefHeight="18.0" prefWidth="95.0" text="Output Filename:"
                               textAlignment="CENTER"/>
                        <TextField fx:id="outputFileTextField" onKeyTyped="#updateOutputFilename"
                                   prefHeight="26.0" prefWidth="312.0"
                                   promptText="Name for output file (.xlsx)"/>
                        <CheckBox fx:id="addSheetsToInputFileCheckbox" mnemonicParsing="false"
                                  text="Add Sheets to Input File?"/>
                     </HBox>
                     <HBox alignment="CENTER_LEFT" prefHeight="62.0" prefWidth="600.0" spacing="5.0">
                        <padding>
                           <Insets left="10.0"/>
                        </padding>
                        <Label text="Number of Replicates:"/>
                        <TextField fx:id="numReplicatesTextField" prefHeight="26.0"
                                   prefWidth="202.0" promptText="# of replicates"/>
                     </HBox>
                     <HBox alignment="CENTER_LEFT" prefHeight="61.0" prefWidth="600.0" spacing="5.0">
                        <padding>
                           <Insets left="10.0"/>
                        </padding>
                        <Label text="Sample Sorting Method:"/>
                        <ChoiceBox fx:id="sampleSortingMethodChoiceBox"
                                   onAction="#updateSampleSortingMethod" prefWidth="150.0"/>
                     </HBox>
                     <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                        <Button mnemonicParsing="false" onAction="#generateOutput"
                                text="Generate"/>
                     </HBox>
                  </VBox>
               </HBox>
            </AnchorPane>
         </Tab>
         <Tab text="Generate Empty Input Sheet">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="302.0" prefWidth="600.0">
               <HBox layoutX="1.0" layoutY="-1.0" prefHeight="374.0" prefWidth="600.0">
                  <VBox prefHeight="374.0" prefWidth="601.0">
                     <HBox alignment="CENTER_LEFT" prefHeight="62.0" prefWidth="600.0" spacing="5.0">
                        <padding>
                           <Insets left="10.0"/>
                        </padding>
                        <Label prefHeight="18.0" prefWidth="128.0" text="Output Filename:"
                               textAlignment="CENTER"/>
                        <TextField prefHeight="26.0" prefWidth="399.0"
                                   promptText="Name for output file (.xlsx)"/>
                     </HBox>
                     <HBox alignment="CENTER_LEFT" prefHeight="54.0" prefWidth="600.0" spacing="5.0">
                        <padding>
                           <Insets left="10.0"/>
                        </padding>
                        <Label prefHeight="18.0" prefWidth="157.0" text="Sample Labeling Method:"/>
                        <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="445.0"
                              spacing="30.0">
                           <padding>
                              <Insets left="30.0"/>
                           </padding>
                           <RadioButton mnemonicParsing="false" selected="true"
                                        text="Condition"/>
                           <RadioButton mnemonicParsing="false" text="Strain"/>
                           <RadioButton mnemonicParsing="false" text="Condition + Strain"/>
                        </HBox>
                     </HBox>
                     <HBox alignment="CENTER_LEFT" prefHeight="62.0" prefWidth="600.0" spacing="5.0">
                        <padding>
                           <Insets left="10.0"/>
                        </padding>
                        <Label prefHeight="18.0" prefWidth="128.0" text="Number of Conditions:"/>
                        <TextField prefHeight="26.0" prefWidth="300.0"
                                   promptText="# of distinct conditions"/>
                        <Button mnemonicParsing="false" prefHeight="26.0" prefWidth="120.0"
                                text="Add Conditions..."/>
                     </HBox>
                     <HBox alignment="CENTER_LEFT" disable="true" prefHeight="62.0" prefWidth="600.0"
                           spacing="5.0">
                        <padding>
                           <Insets left="10.0"/>
                        </padding>
                        <Label prefHeight="18.0" prefWidth="128.0" text="Strains Per Condition:"/>
                        <TextField prefHeight="26.0" prefWidth="300.0"
                                   promptText="# of strains in each condition"/>
                        <Button mnemonicParsing="false" prefHeight="26.0" prefWidth="120.0"
                                text="Add Strains..."/>
                     </HBox>
                     <HBox alignment="CENTER_LEFT" prefHeight="62.0" prefWidth="600.0" spacing="5.0">
                        <padding>
                           <Insets left="10.0"/>
                        </padding>
                        <Label prefHeight="18.0" prefWidth="128.0" text="Number of Replicates:"/>
                        <TextField prefHeight="26.0" prefWidth="300.0"
                                   promptText="# of replicates"/>
                     </HBox>
                     <HBox alignment="CENTER_LEFT" prefHeight="62.0" prefWidth="600.0" spacing="5.0">
                        <padding>
                           <Insets left="10.0"/>
                        </padding>
                        <Label prefHeight="18.0" prefWidth="128.0" text="Number of Timepoints:"/>
                        <TextField prefHeight="26.0" prefWidth="300.0"
                                   promptText="# of timepoints"/>
                        <Button mnemonicParsing="false" prefHeight="26.0" prefWidth="120.0"
                                text="Add Timepoints..."/>
                     </HBox>
                     <HBox alignment="CENTER_LEFT" prefHeight="54.0" prefWidth="600.0" spacing="5.0">
                        <padding>
                           <Insets left="10.0"/>
                        </padding>
                        <Label prefHeight="18.0" prefWidth="142.0"
                               text="Include Baseline Column?"/>
                        <CheckBox mnemonicParsing="false"/>
                     </HBox>
                     <HBox alignment="CENTER_LEFT" prefHeight="61.0" prefWidth="600.0" spacing="5.0">
                        <padding>
                           <Insets left="10.0"/>
                        </padding>
                        <Label text="Sample Sorting Method:"/>
                        <ChoiceBox prefWidth="150.0"/>
                     </HBox>
                     <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                        <Button mnemonicParsing="false" text="Generate"/>
                     </HBox>
                  </VBox>
               </HBox>
            </AnchorPane>
         </Tab>
      </TabPane>
   </HBox>
</AnchorPane>
