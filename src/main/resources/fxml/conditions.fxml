<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.awdevelopment.smithlab.gui.controllers.ConditionsController">

   <children>
      <VBox alignment="TOP_CENTER" layoutX="50.0" prefWidth="500.0" spacing="6">
         <children>
            <Label text="Conditions" textAlignment="CENTER">
               <padding>
                  <Insets bottom="12.5" top="12.5" />
               </padding>
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>

            <ScrollPane fx:id="conditionScrollPane" fitToWidth="true" hbarPolicy="NEVER" prefHeight="300.0" prefWidth="500.0">
               <content>
                  <!-- This VBox will hold ALL the dynamically-created TextFields -->
                  <VBox fx:id="conditionsBox" spacing="6">
                     <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                     </padding>
                  </VBox>

               </content>
            </ScrollPane>

            <Button fx:id="saveCloseButton" mnemonicParsing="false" onAction="#handleSaveAndClose" text="Save and Close">
               <VBox.margin>
                  <Insets bottom="12.5" top="12.5" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
